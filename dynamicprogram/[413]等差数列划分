// leetcode submit region begin(Prohibit modification and deletion)
class Solution {
    /**
     * æš‚æ—¶æ²¡æœ‰æƒ³åˆ°æœ€ç®€åŒ–çš„åŠ¨æ€è§„åˆ’
     * åˆ†ä¸ºä¸¤æ­¥
     * first å…ˆæ±‚å‡ºè¯¥æ•°ç»„è¿ç»­ç­‰å·®æ•°åˆ—çš„é•¿åº¦ï¼Œå­˜å‚¨åˆ°dptbale
     * second éå†dptableï¼Œæ±‚å‡ºæ€»å’Œ
     * */
    public int numberOfArithmeticSlices(int[] A) {
        if (A.length <= 2) {
            return 0;
        }
        int[] dptable = new int[A.length];
        for (int i = 2; i < A.length; i++) {
            if (A[i] - A[i - 1] == A[i - 1] - A[i - 2]) {
                dptable[i] = 3;
                if (dptable[i - 1] > 0) {
                    dptable[i] = dptable[i - 1] + 1;
                }
            }
        }
        int count = 0;
        for (int i = 2; i < dptable.length; i++) {
            if (dptable[i] > 0) {
                dptable[i] = (dptable[i] - 2);
                count += dptable[i];
            }
        }
        return count;
    }
}
